doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1.page-title Add new record to the Video Games Custom Object
        .form-wrapper
            form(method="POST")
                label(for="name") New Video Game Name
                input(type="text" name="name" required)
                label(for="publisher") New Video Game Publisher
                input(type="text" name="publisher" required)
                label(for="price") New Video Game Price
                input(type="text" name="price" required)
                input(type="submit" value="Submit")
        div.button-wrapper
            a.button-home(href="/") Back to Home



